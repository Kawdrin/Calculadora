<Tela>:
    orientation: "vertical"
    MDFloatLayout:
        MDLabel:
            id: numeros
            pos_hint: {"center_x": .5, "center_y":.15}
            text: "0"
            font_size: 32

    MDBoxLayout:
        md_bg_color: 1,1,1,1
        orientation:"vertical"
        adaptive_height: True
        id: botoes
        MDBoxLayout:
            adaptive_height: True
            MDFlatButton:
                text: "("
                font_size: 32
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"("
            MDFlatButton:
                text: ")"
                font_size: 32
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+")"
            MDFlatButton:
                text: "AC"
                font_size: 32
                size_hint_x: .025
                on_release: root.ids.numeros.text = ""
            MDCard:
                size_hint_x: 0.025
                elevation:0
                pos_hint: {"center_x":.5, "center_y": .5}
                MDFloatLayout:
                    MDIconButton:
                        theme_text_color: "Custom"
                        text_color:  0.7176470588235294, 0.10980392156862745, 0.10980392156862745, 1.0
                        icon: "backspace-outline"
                        pos_hint: {"center_x":.5, "center_y": .5}
        MDBoxLayout:
            adaptive_height: True
            MDFlatButton:
                text: "7"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"7"
            MDFlatButton:
                text: "8"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"8"
            MDFlatButton:
                text: "9"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"9"
            MDFlatButton:
                text: "/"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"/"
        MDBoxLayout:
            adaptive_height: True
            MDFlatButton:
                text: "4"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"4"
            MDFlatButton:
                text: "5"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"5"
            MDFlatButton:
                text: "6"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"6"
            MDFlatButton:
                text: "x"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"*"
        MDBoxLayout:
            adaptive_height: True
            MDFlatButton:
                text: "1"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"1"
            MDFlatButton:
                text: "2"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"2"
            MDFlatButton:
                text: "3"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"3"
            MDFlatButton:
                text: "-"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"-"
        MDBoxLayout:
            adaptive_height: True
            MDFlatButton:
                text: "0"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"0"
            MDFlatButton:
                text: ","
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+","
            MDFlatButton:
                text: "="
                font_size: 36
                size_hint_x: .025
                theme_text_color: "Custom"
                text_color: [0.050980392156862744, 0.2784313725490196, 0.6313725490196078, 1.0]
                md_bg_color: 0, 1, 1, 1
                on_release: print("somando...")
            MDFlatButton:
                text: "+"
                font_size: 36
                size_hint_x: .025
                on_release: root.ids.numeros.text = root.ids.numeros.text+"+"
